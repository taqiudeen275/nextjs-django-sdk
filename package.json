{
	"name": "nextjs-django-client",
	"version": "1.4.0",
	"description": "A modern, type-safe SDK for integrating Next.js 15+ applications with Django REST Framework backends using Simple JWT authentication.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc && tsc --module commonjs --outDir dist",
		"test": "jest",
		"prepublishOnly": "npm run build",
		"lint": "eslint src --ext .ts,.tsx",
		"format": "prettier --write \"src/**/*.+(ts|tsx)\""
	},
	"keywords": [
		"nextjs",
		"django",
		"django-rest-framework",
		"react",
		"typescript",
		"jwt",
		"authentication",
		"api",
		"sdk",
		"swr",
		"server-components",
		"server-actions"
	],
	"peerDependencies": {
		"next": "^15.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"swr": "^2.3.0"
	},
	"devDependencies": {
		"@types/jest": "^29.5.5",
		"@types/js-cookie": "^3.0.6",
		"@types/node": "^20.8.7",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@typescript-eslint/eslint-plugin": "^6.8.0",
		"@typescript-eslint/parser": "^6.8.0",
		"eslint": "^9",
		"eslint-config-next": "15.1.3",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"jest": "^29.7.0",
		"prettier": "^3.0.3",
		"ts-jest": "^29.1.1",
		"typescript": "^5.2.2"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"js-cookie": "^3.0.5"
	}
}